<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gudla.tgtourism">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize"
            android:icon="@drawable/tg_tourism_icon"
            android:label="Telangana Tourism">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gudla.tgtourism.MainActivity" />
        </activity>
        <activity android:name=".DestinationsActivity" />
        <activity
            android:name=".DivineDestinationActivity"
            android:configChanges="orientation|screenSize" />
        <activity android:name=".HeritageActivity" />
        <activity android:name=".NatureActivity" />
        <activity android:name=".WildLifeActivity" />
        <activity android:name=".AdventureActivity" />
        <activity android:name=".RegionsActivity" />
    </application>
</manifest>